<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/img_view1"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtTitle"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/img_view2"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/img_view1"
        android:layout_toEndOf="@+id/img_view1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/img_view3"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/img_view1"
        android:layout_toEndOf="@+id/img_view2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:text="ahihi"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_view1"
        android:paddingLeft="15dp"
        android:text="source" />


    <TextView
        android:id="@+id/txtComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/img_view1"
        android:paddingRight="10dp"
        android:text="cmts" />
</RelativeLayout>